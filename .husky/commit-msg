#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "📝 Validating commit message..."

# Run commitlint
npx --no-install commitlint --edit $1

if [ $? -eq 0 ]; then
  echo "✅ Commit message is valid!"
else
  echo ""
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Examples of valid commit messages:"
  echo "  🎉 feat(backend): add user authentication"
  echo "  🐛 fix(mobile): resolve navigation issue"
  echo "  📚 docs: update API documentation"
  echo "  🎨 style(ui): improve button styling"
  echo ""
  echo "Or use: npm run commit (for interactive commit)"
  echo "Or use: npm run gitmoji (for gitmoji helper)"
  echo ""
  exit 1
fi
